{% extends 'base.html.twig' %}


{% block body %}
    <br>
    <h1>RESUME DE VOTRE COMMANDE</h1>


        <table class="table table-striped">
            <thead>
            <tr>
                <th>Email</th>
                <th>Date de la commande</th>
                <th>Date de visite</th>
                <th>Nombre de tickets</th>
            </tr>
            </thead>
            <tbody>
                    <tr>
                        <td>{{ commandes.mail }}</td>
                        <td>{{ commandes.createdAt|date('d-m-Y') }}</td>
                        <td>{{ commandes.dateVisit|date('d-m-Y') }}</td>
                        <td>{{ commandes.nbTickets }}</td>

                    </tr>
            </tbody>
        </table>


        <div class="pull-right">
            <div class="col-md-12">

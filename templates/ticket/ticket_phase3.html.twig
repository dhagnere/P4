                                <ol><h4>TARIF DU BILLET: {{ billet.tarif }} Euros</h4></ol>
                                <ol><h4>CODE DE VERIFICATION UNIQUE: {{ billet.codeBillet}}</h4></ol>
                        </p>
                    </div>


                            {% endfor %}
                    <hr class="my-4">

                        <a class="btn btn-primary btn-lg" href="#" role="button">Acc√©der au paiement</a>



                    </div>
                </div>
            </div>
     </div>

